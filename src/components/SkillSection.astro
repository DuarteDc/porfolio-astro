---
import BriefcaseIcon from "./icons/BriefcaseIcon.astro";
import CodeIcon from "./icons/CodeIcon.astro";
import JSIcon from "./icons/JSIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import NodeIcon from "./icons/NodeIcon.astro";
import NextIcon from "./icons/NextIcon.astro";
import PhpIcon from "./icons/PhpIcon.astro";
import HeartIcon from "./icons/HeartIcon.astro";
import MySQLIcon from "./icons/MySQLIcon.astro";
import MongoIcon from "./icons/MongoIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import LaravelIcon from "./icons/LaravelIcon.astro";
---

<section class="overflow-hidden whitespace-nowrap lg:px-2" id="section-skills">
    <h3
        class="text-5xl lg:tracking-widest text-white mb-24 flex justify-center items-center [&>svg]:mr-2 [&>svg]:text-yellow-400"
    >
        <CodeIcon width="50" height="50" /> Habilidades
    </h3>

    <div
        class="flex flex-col lg:flex-row items-center text-white [&>div>span]: tracking-wider text-3xl"
    >
        <figure class="card-border lg:mr-4 my-4">
            <img
                src="imgs/cartoon-me-pixel-art.webp"
                alt="Eduardo Duarte"
                loading="lazy"
                class="aspect-auto w-[12rem]"
                id="me-pixel-art"
            />
        </figure>
        <div>
            <div class="flex">
                <div>
                    <span>EDUARDO DUARTE CLEMENTE</span>
                </div>
            </div>
            <div
                class="[&>*:last-child]:flex [&>*:last-child]:items-center [&>*:last-child>svg]:text-yellow-600 [&>*:last-child>svg]:mr-4"
            >
                <span>Total XP:</span>
                <span><BriefcaseIcon /> +2 años</span>
            </div>
            <div
                class="[&>*:last-child]:flex [&>*:last-child]:items-center [&>*:last-child>svg]:text-red-600 [&>*:last-child>svg]:mr-4"
            >
                <span>Edad:</span>
                <span><HeartIcon />22 años</span>
            </div>
        </div>
    </div>

    <div class="inline-flex slide mt-10" id="slide-skills">
        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-yellow-400 relative after:bottom-0 mx-4 lg:mx-10
        after:absolute after:h-2 after:w-full after:bg-yellow-600 py-1
        before:absolute before:w-2 before:h-full before:bg-yellow-600 before:right-0"
        >
            <JSIcon width="190" height="80" />
        </span>

        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-blue-400 relative after:bottom-0 mx-4 lg:mx-10
        after:absolute after:h-2 after:w-full after:bg-blue-600 py-1
        before:absolute before:w-2 before:h-full before:bg-blue-600 before:right-0"
        >
            <ReactIcon width="190" height="80" />
        </span>

        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-green-400 relative after:bottom-0 mx-4 lg:mx-10
        after:absolute after:h-2 after:w-full after:bg-green-600 py-1
        before:absolute before:w-2 before:h-full before:bg-green-600 before:right-0"
        >
            <NodeIcon width="190" height="80" />
        </span>
        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-blue-400 relative after:bottom-0 mx-4 lg:mx-10
after:absolute after:h-2 after:w-full after:bg-blue-600 py-1
before:absolute before:w-2 before:h-full before:bg-blue-600 before:right-0"
        >
            <TailwindIcon width="190" height="80" />
        </span>

        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-black relative text-white after:bottom-0 mx-4 lg:mx-10
    after:absolute after:h-2 after:w-full after:bg-zinc-900 py-1
    before:absolute before:w-2 before:h-full before:bg-zinc-900 before:right-0"
        >
            <NextIcon width="190" height="80" />
        </span>

        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-purple-400 relative after:bottom-0 mx-4 lg:mx-10
        after:absolute after:h-2 after:w-full after:bg-purple-600 py-1
        before:absolute before:w-2 before:h-full before:bg-purple-600 before:right-0"
        >
            <PhpIcon width="190" height="80" />
        </span>

        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-red-400 relative after:bottom-0 mx-4 lg:mx-10
        after:absolute after:h-2 after:w-full after:bg-red-600 py-1
        before:absolute before:w-2 before:h-full before:bg-red-600 before:right-0"
        >
            <LaravelIcon width="190" height="80" />
        </span>
        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-blue-400 relative after:bottom-0 mx-4 lg:mx-10
    after:absolute after:h-2 after:w-full after:bg-blue-600 py-1
    before:absolute before:w-2 before:h-full before:bg-blue-600 before:right-0"
        >
            <MySQLIcon width="190" height="80" />
        </span>

        <span
            class="card-border w-[7rem] lg:w-10/12 flex items-center justify-center bg-green-400 relative after:bottom-0 mx-4 lg:mx-10
        after:absolute after:h-2 after:w-full after:bg-green-600 py-1
        before:absolute before:w-2 before:h-full before:bg-green-600 before:right-0"
        >
            <MongoIcon width="190" height="80" />
        </span>
    </div>
</section>

<script is:inline>
    const copySlideSection = document.getElementById("slide-skills").cloneNode(true);
    document.getElementById("section-skills").appendChild(copySlideSection);
</script>
