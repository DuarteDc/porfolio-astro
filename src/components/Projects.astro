---
import Card from "./Card.astro";
import ReactIcon from "./icons/ReactIcon.astro";

const PROJECTS = [
  {
    title: "Payroll",
    description:
      "Maintenance and enhancement of the payroll system using React.js and PHP with MySQL. Implemented automated deployments with GitHub Actions and Docker, applying semantic versioning on container images to ensure control and traceability of each release.",

    image: "/imgs/projects/nomina.png",
    company: "FGJEM",
    time: "2024",
  },
  {
    title: "Pre-Complaint",
    description:
      "Development of an online pre-complaint system using Next.js (TypeScript), MySQL, and Prisma ORM. Applied Docker and CI/CD pipelines for continuous integration and deployment. Integrated automated workflows with GitHub Actions and Nginx as a reverse proxy.",
    link: "https://fgjem.edomex.gob.mx/pre-denuncia-en-linea",
    image: "/imgs/projects/predenuncia.png",
    company: "FGJEM",
    time: "2024",
  },
  {
    title: "Wapizima Ecommerce",
    description:
      "Global e-commerce for beauty products built from scratch with Next.js, Tailwind CSS, and Redux for state management. Applied clean code practices and scalable architecture for maintainability and performance.",
    link: "https://wapizima.com/",
    image: "/imgs/projects/ecommerce.webp",
    company: "Digital Pineapple",
    time: "2022 - 2023",
  },
  {
    title: "Risk Analysis",
    description:
      "Risk assessment system for government institutions. Designed with a REST API in PHP using JWT authentication, PDF/Excel report generation, and hexagonal architecture for clean separation of business logic and infrastructure. The frontend was built with React, TypeScript, Tailwind CSS, and NextUI.",
    link: "https://miigecem.edomex.gob.mx/cuestionario/",
    github: "https://github.com/DuarteDc/FDRPSE",
    image: "/imgs/projects/cuestionario.webp",
    company: "IGECEM",
    time: "2024",
  },
  {
    title: "Wapizima OS",
    description:
      "Online platform for beauty courses, built from scratch with Laravel 8, Livewire, Tailwind CSS, and MySQL. Implemented interactive user interfaces and scalable backend services for course management and student interaction.",
    link: "https://wapizima.com.mx/",
    image: "/imgs/projects/wos.webp",
    company: "Digital Pineapple",
    time: "2021 - 2022",
  },
];
---

<section
  id="projects"
  class="w-full lg:py-20 text-white [&>article]:transition-all [&>article]:duration-500 flex flex-col overflow-hidden lg:px-5 relative before:w-2/12 before:md:w-9/12 before:left-1/2 before:transform before:-translate-x-1/2
  before:h-[20rem] before:lg:h-[35rem] before:bg-purple-500/40 before:absolute before:-z-10 before:top-56 before:xl before:rounded-bl-full before:rounded-br-full before:blur-[6rem]"
>
  <h3
    class="text-center bg-gradient-to-t from-purple-950 to-purple-100 inline-block text-transparent py-5 bg-clip-text text-4xl lg:text-6xl font-bold uppercase font-[Poppins]"
  >
    PROJECTS
  </h3>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
    {PROJECTS.slice(0, 2).map((project) => <Card {...project} />)}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 xl:grid-cols-3 gap-5 mt-5">
    {PROJECTS.slice(2).map((project) => <Card {...project} />)}
  </div>

  <div class="mt-10 flex flex-col gap-5 mb-56">
    <hr
      class="h-[1px] w-full bg-gradient-to-l from-purple-500 to-purple-900 border-none shadow-3xl shadow-purple-500/20"
    />
    <h4
      class="text-center bg-gradient-to-t from-purple-950 to-purple-100 inline-block text-transparent py-5 bg-clip-text text-4xl lg:text-6xl font-bold uppercase font-[Poppins]"
    >
      PERSONAL PROJECTS
    </h4>
    <div
      class="w-full rounded-xl bg-white/5 p-5 hover:shadow-lg hover:shadow-purple-500/20 transition-all duration-500"
    >
      <div class="flex items-center gap-3">
        <ReactIcon />
        <p
          class="text-2xl bg-gradient-to-t from-purple-600 to-purple-100 inline-block text-transparent py-2 bg-clip-text"
        >
          Stepper UI
        </p>
      </div>
      <p>
        Stepper-ui is a React component library that provides a customizable and
        easy-to-use Stepper, ideal for multi-step forms or workflows. Built with
        React, TypeScript, and designed to integrate with TailwindCSS.
      </p>
      <div class="w-full flex gap-5 mt-5">
        <a
          href="https://www.npmjs.com/package/stepper-ui"
          target="_blank"
          class="flex items-center gap-3 px-4 py-2 rounded-md border hover:transition-all hover:duration-500 hover:border-purple-500 hover:bg-purple-500/50 cursor-pointer"
          rel="noopener noreferrer">npm</a
        >
        <a
          href="https://github.com/DuarteDc/stepper-ui-library"
          class="flex items-center gap-3 px-4 py-2 rounded-md border hover:transition-all hover:duration-500 hover:border-purple-500 hover:bg-purple-500/50 cursor-pointer"
          target="_blank"
          rel="noopener noreferrer">GitHub</a
        >
        <a
          href="https://www.npmjs.com/package/stepper-ui"
          target="_blank"
          class="flex items-center gap-3 px-4 py-2 rounded-md border hover:transition-all hover:duration-500 hover:border-purple-500 hover:bg-purple-500/50 cursor-pointer"
          rel="noopener noreferrer">Demo</a
        >
      </div>
    </div>
  </div>
</section>
